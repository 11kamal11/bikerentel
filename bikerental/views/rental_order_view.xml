<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rental Order Views -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">bikerental.order</field>
        <field name="arch" type="xml">
            <form string="Rental Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_rental" string="Start Rental" type="object" 
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_return" string="Mark as Returned" type="object" 
                            class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ('returned', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Customer Information">
                            <field name="customer_name"/>
                            <field name="customer_email"/>
                            <field name="customer_phone"/>
                        </group>
                        <group string="Rental Information">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="total_days" readonly="1"/>
                            <field name="payment_method"/>
                            <field name="payment_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <strong>
                                                    <field name="bike_id"/>
                                                </strong>
                                                <div>
                                                    <span>Quantity: <field name="quantity"/></span>
                                                </div>
                                                <div>
                                                    <span>Unit Price: <field name="unit_price" readonly="1"/></span>
                                                </div>
                                                <div>
                                                    <span>Subtotal: <field name="subtotal" readonly="1"/></span>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            <div class="oe_subtotal_footer oe_right">
                                <field name="total_amount" widget="monetary" 
                                       options="{'currency_field': 'currency_id'}" readonly="1"/>
                            </div>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update Menu Items -->
    <menuitem id="menu_rental_orders" name="Rental Orders" parent="menu_bikerental_root" action="action_rental_orders" sequence="10"/>
</odoo>
